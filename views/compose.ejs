<%- include("partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-lg-4 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Create article</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/compose" method="post" id='article-form'>
                        <div class="mb-3">
                            <label><input type=text name=title class="form-control form-control-lg" placeholder="New Title" required> Title<span style="color: red;">*</span></label>
                            <!--input type="text" id="title" name="title" class="form-control form-control-lg" placeholder="New Title" required-->
      
                        </div>
                        <div class="mb-3">
                            <label><input type=text name=author class="form-control form-control-lg" placeholder="Author" > Author</label>
                            <!--input type="text" id="title" name="title" class="form-control form-control-lg" placeholder="New Title" required-->
      
                        </div>
                        <div class="mb-3">
                            <label><textarea type=text name=content rows="5" cols="50" class="form-control form-control-lg"  placeholder="Type your content here..." required></textarea> Content<span style="color: red;">*</span></label>
                            <!--textarea id="content" name="content" rows="10" cols="50" class="form-control form-control-lg"  placeholder="Type your content here..." required></textarea-->
                    
                        </div>
                        <div class=" text-center" >
                            <button type="submit" class="btn btn-outline-warning text-dark "style="width: 300px;" >Poster</button>
                        </div>
                        
                </form>
                </div>
            </div>
        </div>
    </div>

<%- include("partials/footer") %>