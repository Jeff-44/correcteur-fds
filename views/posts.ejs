<%- include("partials/header") %>
    <% if(locals.articles || articles.length !== 0){ %>
        <div class="articles">
            <% articles.map((article, index) =>{ %>
                <div class="article">
                    <h2 class="title"><a href="/article/<%= article._id %>"><%= article.title %></a></h2>
                    <p class="content"><%= article.content %></p>
                    <div class="like-btn">
                        <button id="like">
                            <img src="images/icons/hand-thumbs-up.svg" alt="like-btn">
                            <span>0</span>
                        </button>
                    </div>
                </div>    
            <% }) %>
        </div>
    <% } else{ %>
        <p>No articles...</p>
    <% } %>
<%- include("partials/footer") %>